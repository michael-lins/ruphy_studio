<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fullscreen Modal</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      overflow: hidden; /* Prevent body scroll when modal is active */
    }
    #modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: #ffffff;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
      z-index: 9999;
      display: none; /* Hide initially */
    }
    #modal-header {
      padding: 10px;
      background-color: #333;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    #modal-content {
      padding: 20px;
      height: calc(100vh - 40px); /* Header height adjustment */
      overflow: auto;
    }
    #close-modal {
      cursor: pointer;
      background: none;
      border: none;
      color: white;
      font-size: 16px;
    }
    #fullscreen-toggle {
      cursor: pointer;
      background: none;
      border: none;
      color: white;
      font-size: 16px;
    }
  </style>
</head>
<body>
  <button onclick="showModal()">Open Fullscreen Modal</button>

  <div id="modal">
    <div id="modal-header">
      <span>Modal Header</span>
      <div>
        <button id="fullscreen-toggle" onclick="toggleFullscreen()">ðŸ”³ Fullscreen</button>
        <button id="close-modal" onclick="closeModal()">âœ– Close</button>
      </div>
    </div>
    <div id="modal-content">
      <h1>Simulated Fullscreen Window</h1>
      <p>This is a full-screen modal that can also go into true fullscreen mode!</p>
    </div>
  </div>

  <script>
    // Show modal
    function showModal() {
      document.getElementById('modal').style.display = 'block';
    }

    // Close modal
    function closeModal() {
      document.getElementById('modal').style.display = 'none';
      exitFullscreen();
    }

    // Toggle browser fullscreen mode
    function toggleFullscreen() {
      const modal = document.getElementById('modal');
      if (!document.fullscreenElement) {
        modal.requestFullscreen()
          .catch(err => console.error(`Error attempting to enable fullscreen: ${err}`));
      } else {
        document.exitFullscreen();
      }
    }

    // Exit fullscreen mode
    function exitFullscreen() {
      if (document.fullscreenElement) {
        document.exitFullscreen();
      }
    }
  </script>
</body>
</html>
