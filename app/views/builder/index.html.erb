<div id="builder" data-controller="builder">
  <div id="components" class="p-4 border-r w-1/4 h-screen float-left bg-gray-100">
    <h2 class="font-bold text-lg mb-4">Components</h2>
    <div id="drag-components" class="space-y-4">
      <div class="component bg-blue-200 hover:bg-blue-300 p-2 border cursor-pointer rounded" data-type="button">Button</div>
      <div class="component bg-green-200 hover:bg-green-300 p-2 border cursor-pointer rounded" data-type="input">Input</div>
      <div class="component bg-yellow-200 hover:bg-yellow-300 p-2 border cursor-pointer rounded" data-type="textarea">Textarea</div>
    </div>
  </div>

  <div id="canvas" class="p-4 w-3/4 h-screen float-left bg-gray-50">
    <h2 class="font-bold text-lg mb-4">Canvas</h2>
    <div id="drop-zone" class="w-full h-full border-2 border-dashed border-gray-300 rounded-lg"></div>
    <button class="mt-4 p-2 bg-green-500 text-white rounded" data-action="builder#saveLayout">Save Layout</button>
  </div>
</div>
